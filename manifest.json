{
	"name": "EasyTest Form Filler",
	"version": "1.0",
	"description": "Automatic form filler with random data to save time while testing.",
	"permissions": ["activeTab"],
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}],
	"icons": {
		"16": "/images/form-icon16.png",
		"32": "/images/form-icon32.png",
		"48": "/images/form-icon48.png",
		"96": "/images/form-icon96.png"
	}
}
